<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.schedule.app.repository.ScheduleDeleteMapper">
    <delete id="deleteDefaultSchedule">
        DELETE FROM
            default_schedule
        WHERE
            schdule_id = #{scheduleId}
    </delete>
    
    <delete id="deleteRegularSchedule">
        DELETE FROM
            regular_schedule
        WHERE
            schdule_id = #{scheduleId}
    </delete>

    <delete id="deleteIrregularSchedule">
        DELETE FROM
            irregular_schedule
        WHERE
            schedule_id = #{scheduleId}
    </delete>

</mapper>